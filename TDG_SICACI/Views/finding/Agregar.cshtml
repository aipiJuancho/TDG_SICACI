@model Agregar_FindingModel
@{
    IEnumerable<SelectListItem> lstRoles = ViewBag.Roles;

    List<SelectListItem> NoConformidad = new List<SelectListItem>();
    NoConformidad.Add(new SelectListItem() { Text = "No conformidad mayor", Value = "No conformidad mayor", Selected = true });
    NoConformidad.Add(new SelectListItem() { Text = "No conformidad menor", Value = "No conformidad menor" });
    NoConformidad.Add(new SelectListItem() { Text = "Observacion", Value = "Observacion" });
    NoConformidad.Add(new SelectListItem() { Text = "Oportunidad de mejora", Value = "Oportunidad de mejora" });

    List<SelectListItem> relacionado = new List<SelectListItem>();
    relacionado.Add(new SelectListItem() { Text = "Numeral 1 norma", Value = "1", Selected = true });
    relacionado.Add(new SelectListItem() { Text = "Numeral 2 norma", Value = "2" });
    relacionado.Add(new SelectListItem() { Text = "Numeral 3 norma", Value = "3" });
    relacionado.Add(new SelectListItem() { Text = "Numeral 4 norma", Value = "4" });

    List<SelectListItem> correccion = new List<SelectListItem>();
    correccion.Add(new SelectListItem() { Text = "Inmediata", Value = "Inmediata", Selected = true });
    correccion.Add(new SelectListItem() { Text = "Sostenible", Value = "Sostenible" }); 
        
  }

<script src="@BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js-partialview")" type="text/javascript"></script>

@using (Html.BeginForm("Agregar", "Finding", null, FormMethod.Post, new {@class="form-horizontal", role="form", id="AgregarFindingFormId"}))
{
    @Html.FormularioFor("#AgregarFindingFormId"
            ).AddFieldFor(m => m.tipoNoConformidad, new JFOptionsFields().SetIsInline(false).loadItems(NoConformidad.AsEnumerable())
            ).AddFieldFor(m => m.comentario
            ).AddFieldFor(m => m.numeralRelacion, new JFOptionsFields().SetIsInline(false).loadItems(relacionado.AsEnumerable())
            ).AddFieldFor(m => m.tipoCorreccion, new JFOptionsFields().SetIsInline(false).loadItems(correccion.AsEnumerable())
            ).AddFieldFor(m => m.accionCorrectivaSugerida
            ).AddFieldFor(m => m.fechaLimiteSugerida, new JFOptionsFields().SetMaxLength(10)
            );
} 