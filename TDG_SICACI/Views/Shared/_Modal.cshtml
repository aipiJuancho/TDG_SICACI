@{
    string title = ViewBag.Title;
    ViewBag.ModalId = title.Replace(" ", "");
    }


<button class="btn btn-primary btn-md" data-toggle="modal" data-target=@Html.Raw("\"#"+ViewBag.ModalId+"\"")>
@ViewBag.Title
</button>
<div class="modal fade" id=@Html.Raw("\""+ViewBag.ModalId+"\"") tabindex="-1" role="dialog" aria-labelledby=@Html.Raw("\"#"+ViewBag.Title+"\"") aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <br/>
      </div>
      <div class="modal-body">
         @RenderBody()
      </div>
        <br/>
        <br/>
    </div>
  </div>
</div>