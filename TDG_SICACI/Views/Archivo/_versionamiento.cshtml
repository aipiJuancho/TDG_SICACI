@model Grid_VersionFilegroup
@{
    jfBSGrid<Grid_VersionFilegroup> grid = new jfBSGrid<Grid_VersionFilegroup>(Html, "version-files");
    grid.AddColumn(u => u.NO_VERSION)
        .AddColumn(u => u.FECHA_CREACION)
        .AddColumn(u => u.ETIQUETA)
        .AddColumn(a => a.USUARIO)
        .RowPrimaryKey("NO_VERSION")
        .ShowRowNumbers(false)
        .AjaxLoadData(Url.Action("_grid_versions"));    
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
            <h4 class="modal-title" id="modal-title-version">Versionamiento de documentos</h4>
        </div>
        <div class="modal-body">
            @grid.RenderHtml()
        </div>
        <div class="modal-footer">
            <button id="btn-version-visualizar" type="button" class="btn btn-primary">Visualizar archivo</button>
            <button id="btn-version-descargar" type="button" class="btn btn-primary">Descargar archivo</button>
            <button id="btn-version-setprimary" type="button" class="btn btn-primary">Establecer como version activa</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        @grid.GetJavaScript()
    });

</script>