@model TDG_SICACI.Models.Modificar_organizacionModel
@{
    ViewBag.Title = "Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Modificar Organizaci&oacuten</h2>

<div class="panel panel-default">
  <div class="panel-body">
   @using (Html.BeginForm("Modificar", "Organizacion", null, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "ModificarOrganizacionFormId" }))
    {
    @Html.FormularioFor("#ModificarOrganizacionFormId"
        ).AddFieldFor(m => m.nombre
        ).AddFieldFor(m => m.eslogan
        ).AddFieldFor(m => m.logo
        ).AddFieldFor(m => m.alcance
        ).AddFieldFor(m => m.mision
        ).AddFieldFor(m => m.vision
        )
       
       <div class="form-group">
          <label for="alcance" class="col-md-3 control-label form-horizontal">Valores</label>
          <div class="col-md-9 ">
              <table id="tablaValores" class="table">
                    <thead>
                        <tr>
                            <th class="col-md-4">Valor</th>
                            <th class="col-md-8">Descripción</th>
                            <th class="">
                                <input name="button" type=button onclick="agregarValor()" value=" + " > 
                            </th>
                            <th class="">             
                                <input name='button' type=button onclick="borrarUltimoValor()" value=" - " >
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="text" name="resp-valor-1" maxlength="80" class="form-control input-sm"></td>
                            <td><input type="text" name="resp-descripcion-1" maxlength="200" class="form-control input-sm" ></td>
                        </tr>
                    </tbody>
                </table>
          </div>
      </div>
   
   
   } 

  
  </div>
</div>
<script type="text/javascript">
    var contLin = 1;
    function agregarValor() {
        var tr, td, tablaValores;
        tablaValores = document.getElementById('tablaValores');
        tr = tablaValores.insertRow(tablaValores.rows.length);
        td = tr.insertCell(tr.cells.length);
        td.innerHTML = "<input type='text' maxlength='80' name='resp-valor-" + (contLin + 1) + "' class='form-control input-sm'>";
        td = tr.insertCell(tr.cells.length);
        td.innerHTML = "<input type='text' maxlength='200' name='resp-descripcion-" + (contLin + 1) + "' class='form-control input-sm'>";
        contLin++;
    }
    function borrarUltimoValor() {
        var tablaValores;
        tablaValores = document.getElementById('tablaValores');
        ultimo = tablaValores.rows.length - 1;
        if (ultimo > 0) {
            tablaValores.deleteRow(ultimo);
            contLin--;
        }
    }
</script>