@model ChangePasswordUserViewModel
<script src="@BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js-partialview")" type="text/javascript"></script>

@using (Html.BeginForm("_ChangePWDUser", "Usuario", null, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "formChangePWDUser" }))
{
    @Html.FormularioFor("#formChangePWDUser"
        ).AddFieldFor(u => u.newPassword
        ).AddFieldFor(u => u.confirmNewPassword
    )
}