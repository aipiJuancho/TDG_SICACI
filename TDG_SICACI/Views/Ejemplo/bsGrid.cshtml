@model jfBSGrid_User_ViewModel
@{
    ViewBag.Title = "bsGrid";
    
    //Definición del Grid de Ejemplo
    jfBSGrid<jfBSGrid_User_ViewModel> grid = new jfBSGrid<jfBSGrid_User_ViewModel>(Html, "divGrid");
    grid.ShowSortingIndicators(true
        ).AddColumn(m => m.usuario
        ).AddColumn(m => m.nombres
        ).AddColumn(m => m.apellidos
        ).RowPrimaryKey("usuario"
        ).RowSelectionMode(jfBSGrid_SelectionMode.Single
        ).onClick("$.handlerGridOnClick"
        ).AjaxLoadData(Url.Action("_get_datagrid", "ejemplo")
    );
}
<script type="text/javascript" src="@Url.Content("~/Scripts/bsGrid/jquery.bs_grid.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/bsGrid/jquery.bs_grid.en.js")"></script>

<script type="text/javascript">
    $(function () {
        @grid.GetJavaScript()
    });

    $.handlerGridOnClick = function (event, data) {
        alert('Desde el handler: ' + JSON.stringify(data));
    }
</script>

<h2>bsGrid Data Table</h2>
@grid.RenderHtml()





